@model List<SymphonyLimited.Models.Course>
@{
    ViewData["Title"] = "Courses We Offer";
}

<link rel="stylesheet" href="~/css/courses.css" />

<h1 class="page-title">Courses We Offer</h1>
<div class="course-grid">
    @foreach (var course in Model)
    {
        <div class="course-card">
            <img src="@Url.Content(course.ImageUrl)" alt="@course.CourseName" class="course-image" />
            <h2>@course.CourseName</h2>
            <p><strong>Duration:</strong> @course.Duration</p>
            @if (course.IsNew) { <span class="badge bg-warning">New</span> }
            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary">View Details</a>
        </div>
    }
</div>