<!-- ======================= HTML FILE (Layout.cshtml) ======================= -->
@inject SymphonyLimited.Data.ApplicationDbContext _context
@{
    var about = _context.AboutInfos.FirstOrDefault();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] SYMPHONYLIMITED</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SYMPHONYLIMITED.styles.css" asp-append-version="true" />
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-light box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.jpg" alt="Logo" height="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-4 me-2">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="Index">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Courses" asp-action="Index">Courses</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EntranceExam" asp-action="Index">Entrance Examination</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="FAQ" asp-action="Index">FAQs</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admission" asp-action="Index">Admission</a></li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>@(about?.InstitutionName ?? "Symphony Limited")</h3>
                <p>Empowering future through quality education & professional training</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/Courses">Course Catalog</a></li>
                    <li><a href="/Admission">Admission Process</a></li>
                    <li><a href="/Contact">Contact Us</a></li>
                    <li><a href="/FAQ">FAQs</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Contact Info</h3>
                <ul>
                    <li><i class="fas fa-map-marker-alt"></i> 123 Education St, Karachi</li>
                    <li><i class="fas fa-phone"></i> +92 311 1234567</li>
                    <li><i class="fas fa-envelope"></i> info@symphony.edu</li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 @(about?.InstitutionName ?? "Symphony Limited"). All rights reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
