@model List<SymphonyLimited.Models.EntranceExamResult>
@{
    ViewData["Title"] = "Manage Entrance Results";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add New Result <i class="fas fa-plus me-1"></i></a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Roll</th>
            <th>Marks</th>
            <th>Class</th>
            <th>Fee</th>
            <th>Due Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.RollNumber</td>
                <td>@item.Marks</td>
                <td>@item.ClassAllotted</td>
                <td>@item.FeeAmount.ToString("C")</td>
                <td>@item.PaymentDueDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
