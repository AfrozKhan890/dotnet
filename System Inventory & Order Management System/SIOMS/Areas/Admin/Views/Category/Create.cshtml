@model SIOMS.Models.Category
@{
    ViewData["Title"] = "Create Category";
    ViewData["Subtitle"] = "Add a new product category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section HeaderButtons {
    <a href="/Admin/Category/Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to List
    </a>
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card animate-slide-up">
            <div class="card-header">
                <h5 class="card-title mb-0">Create New Category</h5>
            </div>
            <div class="card-body">
                <!-- ✅ Show validation errors -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-exclamation-triangle me-2"></i> Please fix the following errors:</h6>
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- ✅ Simple Form -->
                <form method="post" action="/Admin/Category/Create">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group mb-3">
                        <label for="Name" class="form-label">
                            <i class="fas fa-tag me-1"></i> Category Name *
                        </label>
                        <input type="text" id="Name" name="Name" class="form-control" 
                               placeholder="Enter category name" required autofocus
                               value="@Model?.Name">
                        @if (ViewData.ModelState["Name"]?.Errors?.Any() == true)
                        {
                            <div class="text-danger small">
                                @ViewData.ModelState["Name"]?.Errors?.First().ErrorMessage
                            </div>
                        }
                    </div>

                    <div class="form-group mb-4">
                        <label for="Description" class="form-label">
                            <i class="fas fa-align-left me-1"></i> Description
                        </label>
                        <textarea id="Description" name="Description" class="form-control" rows="3" 
                                  placeholder="Enter description (optional)">@Model?.Description</textarea>
                        @if (ViewData.ModelState["Description"]?.Errors?.Any() == true)
                        {
                            <div class="text-danger small">
                                @ViewData.ModelState["Description"]?.Errors?.First().ErrorMessage
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="/Admin/Category/Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save me-2"></i> Create Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus on name field
            document.getElementById('Name').focus();
            
            // Form validation
            const form = document.querySelector('form');
            const submitBtn = document.getElementById('submitBtn');
            
            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    const nameInput = document.getElementById('Name');
                    
                    if (!nameInput.value.trim()) {
                        e.preventDefault();
                        alert('Please enter a category name');
                        nameInput.focus();
                        return false;
                    }
                    
                    // Show loading
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Creating...';
                    submitBtn.disabled = true;
                });
            }
        });
    </script>
}