@model IEnumerable<SIOMS.Models.AlertLog>
@{
    ViewData["Title"] = "Alerts";
    ViewData["Subtitle"] = "System alerts and notifications";
    Layout = "_Layout";
}

@section HeaderButtons {
    <button type="button" class="btn btn-primary me-2" id="checkStockBtn">
        <i class="fas fa-sync-alt me-2"></i> Check Low Stock
    </button>
    <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" 
                data-bs-toggle="dropdown">
            <i class="fas fa-filter me-2"></i> Filter
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" href="@Url.Action("Index", "Alert", new { area = "Admin", resolved = false })">
                    <i class="fas fa-exclamation-circle me-2"></i> Unresolved Only
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Index", "Alert", new { area = "Admin", alertType = "LowStock" })">
                    <i class="fas fa-exclamation-triangle me-2"></i> Low Stock Alerts
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Index", "Alert", new { area = "Admin", alertType = "OutOfStock" })">
                    <i class="fas fa-ban me-2"></i> Out of Stock Alerts
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Index", "Alert", new { area = "Admin" })">
                    <i class="fas fa-list me-2"></i> Show All
                </a>
            </li>
        </ul>
    </div>
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <h2>System Alerts</h2>
                <p class="text-muted">Manage and monitor system alerts and notifications</p>
            </div>
        </div>
    </div>

    <!-- Stats and Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <div class="me-4">
                                    <h5 class="mb-0">@Model.Count() Total Alerts</h5>
                                    <p class="text-muted mb-0">@Model.Count(a => !a.IsResolved) unresolved</p>
                                </div>
                                <div>
                                    <span class="badge bg-warning me-2">
                                        <i class="fas fa-exclamation-triangle me-1"></i> @Model.Count(a => a.AlertType == "LowStock") Low Stock
                                    </span>
                                    <span class="badge bg-danger">
                                        <i class="fas fa-ban me-1"></i> @Model.Count(a => a.AlertType == "OutOfStock") Out of Stock
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <form method="get" action="@Url.Action("Index", "Alert", new { area = "Admin" })" class="d-inline">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Search alerts..." value="@ViewBag.SearchFilter">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Type</th>
                                    <th>Product</th>
                                    <th>Message</th>
                                    <th>Alert Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var alert in Model)
                                    {
                                        <tr class="@(!alert.IsResolved ? "table-warning" : "")">
                                            <td>
                                                @switch (alert.AlertType)
                                                {
                                                    case "LowStock":
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-exclamation-triangle me-1"></i> Low Stock
                                                        </span>
                                                        break;
                                                    case "OutOfStock":
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-ban me-1"></i> Out of Stock
                                                        </span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-info">@alert.AlertType</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (alert.Product != null)
                                                {
                                                    <a href="@Url.Action("Details", "Product", new { area = "Admin", id = alert.ProductId })" 
                                                       class="text-decoration-none">
                                                        @alert.Product.Name
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Product not found</span>
                                                }
                                            </td>
                                            <td>@alert.Message</td>
                                            <td>
                                                @alert.AlertDate.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">@alert.AlertDate.ToString("hh:mm tt")</small>
                                            </td>
                                            <td>
                                                @if (alert.IsResolved)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i> Resolved
                                                    </span>
                                                    <br>
                                                    <small class="text-muted">@alert.ResolvedDate?.ToString("MMM dd")</small>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation me-1"></i> Unresolved
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", "Alert", new { area = "Admin", id = alert.Id })" 
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (!alert.IsResolved)
                                                    {
                                                        <button type="button" class="btn btn-outline-success resolve-alert-btn" 
                                                                data-id="@alert.Id" title="Mark as Resolved">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    <button type="button" class="btn btn-outline-danger delete-alert-btn" 
                                                            data-id="@alert.Id" title="Delete Alert">
                                                            <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                                            <h5 class="text-muted">No alerts found</h5>
                                            <p class="text-muted mb-4">All systems are running smoothly!</p>
                                            <button type="button" class="btn btn-primary" id="checkStockBtn2">
                                                <i class="fas fa-sync-alt me-2"></i> Check for Low Stock
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resolve Alert Modal -->
<div class="modal fade" id="resolveAlertModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resolve Alert</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="resolveAlertForm">
                <div class="modal-body">
                    <input type="hidden" id="resolveAlertId">
                    <div class="form-group mb-3">
                        <label for="resolutionNotes" class="form-label">Resolution Notes</label>
                        <textarea id="resolutionNotes" class="form-control" rows="4" 
                                  placeholder="Add notes about how this alert was resolved..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Mark as Resolved</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Check low stock
            document.querySelectorAll('#checkStockBtn, #checkStockBtn2').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Checking...';
                    this.disabled = true;
                    
                    fetch('@Url.Action("CheckLowStock", "Alert", new { area = "Admin" })', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            alert(data.message);
                            this.innerHTML = '<i class="fas fa-sync-alt me-2"></i> Check Low Stock';
                            this.disabled = false;
                        }
                    })
                    .catch(error => {
                        alert('Error checking stock');
                        this.innerHTML = '<i class="fas fa-sync-alt me-2"></i> Check Low Stock';
                        this.disabled = false;
                    });
                });
            });
            
            // Resolve alert
            document.querySelectorAll('.resolve-alert-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const alertId = this.dataset.id;
                    document.getElementById('resolveAlertId').value = alertId;
                    const modal = new bootstrap.Modal(document.getElementById('resolveAlertModal'));
                    modal.show();
                });
            });
            
            // Resolve form submission
            document.getElementById('resolveAlertForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const alertId = document.getElementById('resolveAlertId').value;
                const notes = document.getElementById('resolutionNotes').value;
                
                fetch('@Url.Action("Resolve", "Alert", new { area = "Admin" })/' + alertId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ id: alertId, resolutionNotes: notes })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        bootstrap.Modal.getInstance(document.getElementById('resolveAlertModal')).hide();
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    alert('Error resolving alert');
                });
            });
            
            // Delete alert
            document.querySelectorAll('.delete-alert-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const alertId = this.dataset.id;
                    
                    if (confirm('Are you sure you want to delete this alert?')) {
                        fetch('@Url.Action("Delete", "Alert", new { area = "Admin" })/' + alertId, {
                            method: 'POST',
                            headers: {
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert(data.message);
                                setTimeout(() => location.reload(), 1000);
                            } else {
                                alert(data.message);
                            }
                        })
                        .catch(error => {
                            alert('Error deleting alert');
                        });
                    }
                });
            });
        });
    </script>
}