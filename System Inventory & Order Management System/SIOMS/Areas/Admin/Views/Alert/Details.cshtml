@model SIOMS.Models.AlertLog
@{
    ViewData["Title"] = "Alert Details";
    ViewData["Subtitle"] = "View alert information";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a href="@Url.Action("Index", "Alert", new { area = "Admin" })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to List
    </a>
    @if (!Model.IsResolved)
    {
        <button type="button" class="btn btn-success" id="resolveBtn" data-id="@Model.Id">
            <i class="fas fa-check me-2"></i> Mark as Resolved
        </button>
    }
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card animate-slide-up">
            <div class="card-header @(Model.IsResolved ? "bg-success text-white" : "bg-warning")">
                <h5 class="card-title mb-0">
                    <i class="fas @(Model.IsResolved ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                    Alert Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="alert @(Model.IsResolved ? "alert-success" : "alert-warning")">
                            <h5 class="alert-heading">
                                @switch (Model.AlertType)
                                {
                                    case "LowStock":
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <span>Low Stock Alert</span>
                                        break;
                                    case "OutOfStock":
                                        <i class="fas fa-ban me-2"></i>
                                        <span>Out of Stock Alert</span>
                                        break;
                                    default:
                                        <span>@Model.AlertType</span>
                                        break;
                                }
                            </h5>
                            <p class="mb-0">@Model.Message</p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h6 class="text-muted mb-2">Product</h6>
                        @if (Model.Product != null)
                        {
                            <p class="mb-0">
                                <a href="@Url.Action("Details", "Product", new { area = "Admin", id = Model.ProductId })" 
                                   class="text-decoration-none">
                                    <i class="fas fa-box me-2"></i>@Model.Product.Name
                                </a>
                            </p>
                            <small class="text-muted">SKU: @Model.Product.SKU</small>
                        }
                        else
                        {
                            <p class="mb-0 text-muted">Product not found</p>
                        }
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <h6 class="text-muted mb-2">Alert Type</h6>
                        <p class="mb-0">
                            @switch (Model.AlertType)
                            {
                                case "LowStock":
                                    <span class="badge bg-warning">Low Stock</span>
                                    break;
                                case "OutOfStock":
                                    <span class="badge bg-danger">Out of Stock</span>
                                    break;
                                default:
                                    <span class="badge bg-info">@Model.AlertType</span>
                                    break;
                            }
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <h6 class="text-muted mb-2">Alert Date</h6>
                        <p class="mb-0">
                            @Model.AlertDate.ToString("MMMM dd, yyyy")
                            <br>
                            <small class="text-muted">@Model.AlertDate.ToString("hh:mm tt")</small>
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <h6 class="text-muted mb-2">Status</h6>
                        <p class="mb-0">
                            @if (Model.IsResolved)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i> Resolved
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation me-1"></i> Unresolved
                                </span>
                            }
                        </p>
                    </div>
                    
                    @if (Model.IsResolved)
                    {
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-2">Resolved Date</h6>
                            <p class="mb-0">
                                @Model.ResolvedDate?.ToString("MMMM dd, yyyy")
                                <br>
                                <small class="text-muted">@Model.ResolvedDate?.ToString("hh:mm tt")</small>
                            </p>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.ResolutionNotes))
                        {
                            <div class="col-md-12 mb-3">
                                <h6 class="text-muted mb-2">Resolution Notes</h6>
                                <div class="alert alert-info">
                                    <p class="mb-0">@Model.ResolutionNotes</p>
                                </div>
                            </div>
                        }
                    }
                </div>
                
                @if (Model.Product != null)
                {
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3">Product Stock Information</h5>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-boxes fa-2x text-primary mb-2"></i>
                                    <h3 class="mb-0">@Model.Product.StockQuantity</h3>
                                    <p class="text-muted mb-0">Current Stock</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-exclamation-circle fa-2x text-warning mb-2"></i>
                                    <h3 class="mb-0">@Model.Product.MinStockLimit</h3>
                                    <p class="text-muted mb-0">Min Stock Limit</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-dollar-sign fa-2x text-success mb-2"></i>
                                    <h3 class="mb-0">@Model.Product.Price.ToString("C")</h3>
                                    <p class="text-muted mb-0">Unit Price</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Resolve Modal -->
<div class="modal fade" id="resolveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resolve Alert</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="resolveForm">
                <div class="modal-body">
                    <input type="hidden" id="alertId" value="@Model.Id">
                    <div class="mb-3">
                        <label for="resolutionNotes" class="form-label">Resolution Notes</label>
                        <textarea id="resolutionNotes" class="form-control" rows="4" 
                                  placeholder="Add notes about how this alert was resolved..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Mark as Resolved</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const resolveBtn = document.getElementById('resolveBtn');
            const modal = new bootstrap.Modal(document.getElementById('resolveModal'));
            const form = document.getElementById('resolveForm');
            
            if (resolveBtn) {
                resolveBtn.addEventListener('click', function() {
                    modal.show();
                });
            }
            
            if (form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const alertId = document.getElementById('alertId').value;
                    const notes = document.getElementById('resolutionNotes').value;
                    
                    fetch('@Url.Action("Resolve", "Alert", new { area = "Admin" })/' + alertId, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ id: alertId, resolutionNotes: notes })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            window.location.reload();
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        alert('Error resolving alert');
                        console.error('Error:', error);
                    });
                });
            }
        });
    </script>
}