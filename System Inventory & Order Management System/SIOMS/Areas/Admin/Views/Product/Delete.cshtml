@model SIOMS.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    ViewData["Subtitle"] = "Confirm product deletion";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section HeaderButtons {
    <a href="/Admin/Product/Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to Products
    </a>
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i> Delete Product
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Warning!</h5>
                    <p>You are about to permanently delete the product <strong>"@Model.Name"</strong>. This action cannot be undone.</p>
                </div>
                
                <!-- Product Preview -->
                <div class="product-preview text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" 
                             style="max-width: 200px; max-height: 200px; object-fit: cover; border-radius: 5px;" class="mb-3">
                    }
                    else
                    {
                        <div class="display-1 text-muted mb-3">
                            <i class="fas fa-box"></i>
                        </div>
                    }
                    <h5>@Model.Name</h5>
                    @if (!string.IsNullOrEmpty(Model.SKU))
                    {
                        <p class="text-muted">SKU: @Model.SKU</p>
                    }
                </div>
                
                <!-- Product Details -->
                <div class="product-details mb-4 p-3 bg-light rounded">
                    <h6 class="mb-3">Product Details:</h6>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <strong>Category:</strong> @(Model.Category?.Name ?? "No category")
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Supplier:</strong> @(Model.Supplier?.Name ?? "No supplier")
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Price:</strong> @Model.Price.ToString("C")
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Current Stock:</strong> @Model.StockQuantity
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Stock Movements:</strong> @(Model.StockMovements?.Count ?? 0)
                        </div>
                    </div>
                </div>
                
                @if ((Model.StockMovements?.Count ?? 0) > 0)
                {
                    <div class="alert alert-warning mb-4">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i> Important Notice
                        </h6>
                        <p class="mb-0">
                            This product has <strong>@(Model.StockMovements?.Count ?? 0) stock movement records</strong> 
                            that will also be permanently deleted.
                        </p>
                    </div>
                }
                
                <form method="post" action="/Admin/Product/Delete/@Model.Id" class="mt-4" id="deleteForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                        <label class="form-check-label text-danger fw-bold" for="confirmDelete">
                            I understand that this action cannot be undone
                        </label>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/Admin/Product/Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                            <i class="fas fa-trash me-2"></i> Delete Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmCheckbox = document.getElementById('confirmDelete');
            const deleteBtn = document.getElementById('deleteBtn');
            
            confirmCheckbox.addEventListener('change', function() {
                deleteBtn.disabled = !this.checked;
            });
            
            deleteBtn.addEventListener('click', function(e) {
                if (!confirm('Are you absolutely sure you want to delete this product?')) {
                    e.preventDefault();
                } else {
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Deleting...';
                    this.disabled = true;
                }
            });
        });
    </script>
}