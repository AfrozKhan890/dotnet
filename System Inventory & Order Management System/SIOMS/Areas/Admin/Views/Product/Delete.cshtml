@model SIOMS.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    ViewData["Subtitle"] = "Remove product from inventory";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to List
    </a>
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card animate-slide-up">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Delete Product</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Warning!</h5>
                    <p>You are about to delete the product <strong>"@Model.Name"</strong>. This action cannot be undone.</p>
                </div>
                
                <div class="product-info mb-4">
                    <h6 class="text-muted mb-3">Product Details</h6>
                    <div class="row">
                        <div class="col-12 mb-3">
                            <strong>Product Name:</strong>
                            <p class="mb-0">@Model.Name</p>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <strong>SKU:</strong>
                            <p class="mb-0">@Model.SKU</p>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <strong>Category:</strong>
                            <p class="mb-0">@Model.Category?.Name</p>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <strong>Supplier:</strong>
                            <p class="mb-0">@Model.Supplier?.Name</p>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <strong>Current Price:</strong>
                            <p class="mb-0">@Model.Price.ToString("C")</p>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <strong>Stock Quantity:</strong>
                            <p class="mb-0">
                                <span class="badge @(Model.StockQuantity > 0 ? "bg-warning" : "bg-success")">
                                    @Model.StockQuantity units
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                
                @if (Model.StockQuantity > 0)
                {
                    <div class="alert alert-warning">
                        <h6 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i> Stock Warning</h6>
                        <p class="mb-0">
                            This product has <strong>@Model.StockQuantity units</strong> in stock. 
                            Consider adjusting stock to zero before deletion.
                        </p>
                    </div>
                }
                
                <form asp-action="Delete" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Are you absolutely sure you want to delete this product? This action cannot be undone.')">
                            <i class="fas fa-trash me-2"></i> Delete Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>