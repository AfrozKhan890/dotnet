@model SIOMS.Models.Product
@{
    ViewData["Title"] = "Product Details";
    ViewData["Subtitle"] = "View product information";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to Products
    </a>
    <div class="btn-group ms-2">
        <a href="@Url.Action("Edit", "Product", new { area = "Admin", id = Model.Id })" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i> Edit
        </a>
        <button type="button" class="btn btn-warning stock-adjust-btn" 
                data-id="@Model.Id" data-name="@Model.Name" 
                data-current="@Model.StockQuantity">
            <i class="fas fa-exchange-alt me-2"></i> Adjust Stock
        </button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="fas fa-trash me-2"></i> Delete
        </button>
    </div>
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Left Column - Product Info -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="avatar-circle-lg bg-primary text-white mb-3">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                    <h4 class="card-title mb-1">@Model.Name</h4>
                    @if (!string.IsNullOrEmpty(Model.SKU))
                    {
                        <p class="text-muted mb-3">SKU: @Model.SKU</p>
                    }
                    
                    <div class="product-status mb-4">
                        @if (Model.StockQuantity == 0)
                        {
                            <span class="badge bg-danger p-2">
                                <i class="fas fa-ban me-1"></i> Out of Stock
                            </span>
                        }
                        else if (Model.StockQuantity <= Model.MinStockLimit)
                        {
                            <span class="badge bg-warning p-2">
                                <i class="fas fa-exclamation-triangle me-1"></i> Low Stock
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success p-2">
                                <i class="fas fa-check-circle me-1"></i> In Stock
                            </span>
                        }
                    </div>
                    
                    <div class="product-price mb-4">
                        <h3 class="text-success mb-0">@Model.Price.ToString("C")</h3>
                        <small class="text-muted">Unit Price</small>
                    </div>
                </div>
            </div>
            
            <!-- Category and Supplier -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i> Product Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Category</small>
                        <p class="mb-0">
                            @if (Model.Category != null)
                            {
                                <span class="badge bg-info">@Model.Category.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No category</span>
                            }
                        </p>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block">Supplier</small>
                        <p class="mb-0">
                            @if (Model.Supplier != null)
                            {
                                <i class="fas fa-truck me-2 text-muted"></i>
                                @Model.Supplier.Name
                            }
                            else
                            {
                                <span class="text-muted">No supplier</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Stock Information -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-boxes me-2"></i> Stock Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h5 class="mb-0">@Model.StockQuantity</h5>
                            <small class="text-muted">Current Stock</small>
                        </div>
                        <div class="col-6">
                            <h5 class="mb-0">@Model.MinStockLimit</h5>
                            <small class="text-muted">Min Stock Limit</small>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 10px;">
                        @{
                            var stockPercentage = Model.MinStockLimit > 0 ? 
                                Math.Min(100, (Model.StockQuantity * 100) / Model.MinStockLimit) : 0;
                        }
                        <div class="progress-bar @(stockPercentage > 100 ? "bg-success" : stockPercentage > 50 ? "bg-warning" : "bg-danger")" 
                             role="progressbar" style="width: @(stockPercentage > 100 ? 100 : stockPercentage)%">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Column - Details and History -->
        <div class="col-lg-8">
            <!-- Description -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-file-alt me-2"></i> Description
                    </h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-0">@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No description available</p>
                    }
                </div>
            </div>
            
            <!-- Product Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-list-alt me-2"></i> Product Details
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Product ID</small>
                            <p class="mb-0">@Model.Id</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Created Date</small>
                            <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Last Updated</small>
                            <p class="mb-0">
                                @if (Model.UpdatedAt.HasValue)
                                {
                                    @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not updated yet</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Stock Status</small>
                            <p class="mb-0">
                                @if (Model.StockQuantity == 0)
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                                else if (Model.StockQuantity <= Model.MinStockLimit)
                                {
                                    <span class="badge bg-warning">Low Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Stock Movements -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i> Recent Stock Movements
                    </h6>
                    <a href="@Url.Action("Index", "StockMovement", new { area = "Admin", productId = Model.Id })" 
                       class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.StockMovements != null && Model.StockMovements.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Quantity</th>
                                        <th>Reference</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var movement in Model.StockMovements.OrderByDescending(m => m.MovementDate).Take(5))
                                    {
                                        <tr>
                                            <td>@movement.MovementDate.ToString("MMM dd")</td>
                                            <td>
                                                @if (movement.Quantity > 0)
                                                {
                                                    <span class="badge bg-success">IN</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">OUT</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@Math.Abs(movement.Quantity)</strong>
                                            </td>
                                            <td>@movement.ReferenceNumber</td>
                                            <td>
                                                <small class="text-truncate d-block" style="max-width: 150px;">
                                                    @movement.Notes
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-2x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No stock movements found</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stock Adjustment Modal -->
<div class="modal fade" id="stockAdjustModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adjust Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="stockAdjustForm">
                <div class="modal-body">
                    <input type="hidden" id="adjustProductId" value="@Model.Id">
                    <div class="mb-3">
                        <label class="form-label">Product</label>
                        <input type="text" id="adjustProductName" class="form-control" value="@Model.Name" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Stock</label>
                        <input type="number" id="adjustCurrentStock" class="form-control" value="@Model.StockQuantity" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adjustment Type</label>
                        <select id="adjustmentType" class="form-select">
                            <option value="add">Add Stock</option>
                            <option value="remove">Remove Stock</option>
                            <option value="set">Set Stock</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label id="adjustQuantityLabel" class="form-label">Quantity to Add</label>
                        <input type="number" id="adjustQuantity" class="form-control" min="1" value="1">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea id="adjustNotes" class="form-control" rows="3" 
                                  placeholder="Reason for adjustment..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Adjustment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete product <strong>@Model.Name</strong>?</p>
                <p class="text-danger"><strong>Warning:</strong> This action cannot be undone.</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This product has <strong>@Model.StockMovements?.Count() stock movements</strong> that will also be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-area="Admin" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i> Delete Product
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Stock adjustment modal
            const stockAdjustBtn = document.querySelector('.stock-adjust-btn');
            if (stockAdjustBtn) {
                stockAdjustBtn.addEventListener('click', function() {
                    const modal = new bootstrap.Modal(document.getElementById('stockAdjustModal'));
                    modal.show();
                });
            }

            // Adjustment type change
            const adjustmentType = document.getElementById('adjustmentType');
            if (adjustmentType) {
                adjustmentType.addEventListener('change', function() {
                    const type = this.value;
                    const label = document.getElementById('adjustQuantityLabel');
                    
                    if (type === 'add') {
                        label.textContent = 'Quantity to Add';
                    } else if (type === 'remove') {
                        label.textContent = 'Quantity to Remove';
                    } else {
                        label.textContent = 'New Stock Quantity';
                    }
                });
            }

            // Stock adjustment form submission
            const stockAdjustForm = document.getElementById('stockAdjustForm');
            if (stockAdjustForm) {
                stockAdjustForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const id = document.getElementById('adjustProductId').value;
                    const type = document.getElementById('adjustmentType').value;
                    const quantity = parseInt(document.getElementById('adjustQuantity').value);
                    const current = parseInt(document.getElementById('adjustCurrentStock').value);
                    const notes = document.getElementById('adjustNotes').value;
                    
                    let adjustment = 0;
                    
                    // Calculate adjustment based on type
                    if (type === 'add') {
                        adjustment = quantity;
                    } else if (type === 'remove') {
                        adjustment = -quantity;
                    } else if (type === 'set') {
                        adjustment = quantity - current;
                    }
                    
                    // Send AJAX request
                    fetch('@Url.Action("UpdateStock", "Product", new { area = "Admin" })', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ id: id, adjustment: adjustment, notes: notes })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            location.reload();
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        alert('An error occurred. Please try again.');
                    });
                });
            }
        });
    </script>
}