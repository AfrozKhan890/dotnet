@model SIOMS.Models.Product
@{
    ViewData["Title"] = "Product Details";
    ViewData["Subtitle"] = "View product information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section HeaderButtons {
    <a href="/Admin/Product/Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to Products
    </a>
    <a href="/Admin/Product/Edit/@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i> Edit
    </a>
    <button type="button" class="btn btn-warning stock-adjust-btn" 
            data-id="@Model.Id" data-name="@Model.Name" 
            data-current="@Model.StockQuantity">
        <i class="fas fa-exchange-alt me-2"></i> Adjust Stock
    </button>
    <a href="/Admin/Product/Delete/@Model.Id" class="btn btn-outline-danger delete-confirm">
        <i class="fas fa-trash me-2"></i> Delete
    </a>
}

<div class="row">
    <!-- Left Column - Product Info -->
    <div class="col-lg-4">
        <!-- Product Image Card -->
        <div class="card mb-4">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" 
                         class="img-fluid rounded" style="max-height: 300px; object-fit: contain;">
                }
                else
                {
                    <div class="display-1 text-muted mb-3">
                        <i class="fas fa-box"></i>
                    </div>
                }
                
                <h4 class="card-title mb-1">@Model.Name</h4>
                @if (!string.IsNullOrEmpty(Model.SKU))
                {
                    <p class="text-muted mb-3">SKU: @Model.SKU</p>
                }
                
                <!-- Stock Status -->
                <div class="product-status mb-4">
                    @if (Model.StockQuantity == 0)
                    {
                        <span class="badge bg-danger p-2">
                            <i class="fas fa-ban me-1"></i> Out of Stock
                        </span>
                    }
                    else if (Model.StockQuantity <= Model.MinStockLimit)
                    {
                        <span class="badge bg-warning p-2">
                            <i class="fas fa-exclamation-triangle me-1"></i> Low Stock
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success p-2">
                            <i class="fas fa-check-circle me-1"></i> In Stock
                        </span>
                    }
                </div>
                
                <!-- Price -->
                <div class="product-price mb-4">
                    <h3 class="text-success mb-0">@Model.Price.ToString("C")</h3>
                    <small class="text-muted">Unit Price</small>
                </div>
                
                <!-- Quick Actions -->
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-warning stock-adjust-btn" 
                            data-id="@Model.Id" data-name="@Model.Name" 
                            data-current="@Model.StockQuantity">
                        <i class="fas fa-exchange-alt me-2"></i> Adjust Stock
                    </button>
                    <a href="/Admin/Product/Edit/@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i> Edit Product
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Stock Info Card -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-boxes me-2"></i> Stock Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center mb-3">
                    <div class="col-6">
                        <h4 class="mb-0">@Model.StockQuantity</h4>
                        <small class="text-muted">Current Stock</small>
                    </div>
                    <div class="col-6">
                        <h4 class="mb-0">@Model.MinStockLimit</h4>
                        <small class="text-muted">Min Stock Limit</small>
                    </div>
                </div>
                
                <!-- Stock Progress Bar -->
                @{
                    var stockPercentage = Model.MinStockLimit > 0 ? 
                        Math.Min(100, (Model.StockQuantity * 100) / Model.MinStockLimit) : 0;
                }
                <div class="mb-2">
                    <small class="text-muted">Stock Level</small>
                </div>
                <div class="progress" style="height: 10px;">
                    <div class="progress-bar @(stockPercentage > 100 ? "bg-success" : stockPercentage > 50 ? "bg-warning" : "bg-danger")" 
                         role="progressbar" style="width: @(stockPercentage > 100 ? 100 : stockPercentage)%">
                    </div>
                </div>
                <small class="text-muted mt-2 d-block">
                    @if (stockPercentage > 100)
                    {
                        <span class="text-success">Stock is above minimum limit</span>
                    }
                    else if (stockPercentage > 50)
                    {
                        <span class="text-warning">Stock is getting low</span>
                    }
                    else
                    {
                        <span class="text-danger">Stock is critically low</span>
                    }
                </small>
            </div>
        </div>
    </div>
    
    <!-- Right Column - Details -->
    <div class="col-lg-8">
        <!-- Product Details Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i> Product Details
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Product ID</small>
                        <p class="mb-0">@Model.Id</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Created Date</small>
                        <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Last Updated</small>
                        <p class="mb-0">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy hh:mm tt")
                            }
                            else
                            {
                                <span class="text-muted">Not updated yet</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Category</small>
                        <p class="mb-0">
                            @if (Model.Category != null)
                            {
                                <span class="badge bg-info">@Model.Category.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No category</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Supplier</small>
                        <p class="mb-0">
                            @if (Model.Supplier != null)
                            {
                                <i class="fas fa-truck me-2 text-muted"></i>
                                @Model.Supplier.Name
                            }
                            else
                            {
                                <span class="text-muted">No supplier</span>
                            }
                        </p>
                    </div>
                </div>
                
                <!-- Description -->
                <div class="mt-4">
                    <h6 class="text-muted mb-2">Description</h6>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-0">@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No description available</p>
                    }
                </div>
            </div>
        </div>
        
        <!-- Stock Movements Card -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0">
                    <i class="fas fa-history me-2"></i> Recent Stock Movements
                </h6>
                <a href="/Admin/StockMovement/Index?productId=@Model.Id" 
                   class="btn btn-sm btn-outline-primary">
                    View All
                </a>
            </div>
            <div class="card-body">
                @if (Model.StockMovements?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Quantity</th>
                                    <th>Reference</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var movement in Model.StockMovements.OrderByDescending(m => m.MovementDate).Take(5))
                                {
                                    <tr>
                                        <td>@movement.MovementDate.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge @(movement.Quantity > 0 ? "bg-success" : "bg-danger")">
                                                @(movement.Quantity > 0 ? "IN" : "OUT")
                                            </span>
                                        </td>
                                        <td>
                                            <strong>@Math.Abs(movement.Quantity)</strong>
                                        </td>
                                        <td>@movement.ReferenceNumber</td>
                                        <td>
                                            <small class="text-truncate d-block" style="max-width: 150px;">
                                                @movement.Notes
                                            </small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-history fa-2x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No stock movements found</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Stock Adjustment Modal -->
<div class="modal fade" id="stockAdjustModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adjust Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="stockAdjustForm">
                <div class="modal-body">
                    <input type="hidden" id="adjustProductId">
                    <div class="mb-3">
                        <label class="form-label">Product</label>
                        <input type="text" id="adjustProductName" class="form-control" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Stock</label>
                        <input type="number" id="adjustCurrentStock" class="form-control" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Stock Quantity</label>
                        <input type="number" id="adjustNewStock" class="form-control" min="0" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea id="adjustNotes" class="form-control" rows="3" 
                                  placeholder="Reason for adjustment..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Stock</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Delete confirmation
            document.querySelectorAll('.delete-confirm').forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this product?')) {
                        e.preventDefault();
                    }
                });
            });

            // Stock adjustment modal
            document.querySelectorAll('.stock-adjust-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = this.dataset.id;
                    const productName = this.dataset.name;
                    const currentStock = this.dataset.current;
                    
                    document.getElementById('adjustProductId').value = productId;
                    document.getElementById('adjustProductName').value = productName;
                    document.getElementById('adjustCurrentStock').value = currentStock;
                    document.getElementById('adjustNewStock').value = currentStock;
                    
                    const modal = new bootstrap.Modal(document.getElementById('stockAdjustModal'));
                    modal.show();
                });
            });

            // Stock adjustment form submission
            document.getElementById('stockAdjustForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const productId = document.getElementById('adjustProductId').value;
                const newStock = document.getElementById('adjustNewStock').value;
                const notes = document.getElementById('adjustNotes').value;
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                
                fetch(`/Admin/Product/UpdateStock/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token || ''
                    },
                    body: JSON.stringify({ 
                        newStock: parseInt(newStock),
                        notes: notes 
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    alert('Error updating stock');
                });
            });
        });
    </script>
}