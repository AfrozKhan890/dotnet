@model SIOMS.Models.PurchaseOrder
@{
    ViewData["Title"] = "Purchase Order Details";
    ViewData["Subtitle"] = "View purchase order information";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a href="@Url.Action("PurchaseOrders", "Order", new { area = "Admin" })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to Orders
    </a>
    <div class="btn-group ms-2">
        @if (Model.Status != "Delivered" && Model.Status != "Cancelled")
        {
            <a href="@Url.Action("EditPurchaseOrder", "Order", new { area = "Admin", id = Model.Id })" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i> Edit
            </a>
        }
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="fas fa-trash me-2"></i> Delete
        </button>
    </div>
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Left Column - Order Info -->
        <div class="col-lg-4">
            <!-- Order Status Card -->
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title mb-3">Order Status</h5>
                    @switch (Model.Status)
                    {
                        case "Pending":
                            <div class="status-indicator bg-warning">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                            <h4 class="mt-3 mb-0 text-warning">Pending</h4>
                            break;
                        case "Processing":
                            <div class="status-indicator bg-info">
                                <i class="fas fa-spinner fa-2x"></i>
                            </div>
                            <h4 class="mt-3 mb-0 text-info">Processing</h4>
                            break;
                        case "Delivered":
                            <div class="status-indicator bg-success">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                            <h4 class="mt-3 mb-0 text-success">Delivered</h4>
                            break;
                        case "Cancelled":
                            <div class="status-indicator bg-danger">
                                <i class="fas fa-times-circle fa-2x"></i>
                            </div>
                            <h4 class="mt-3 mb-0 text-danger">Cancelled</h4>
                            break;
                    }
                    
                    <div class="mt-4">
                        @if (Model.Status != "Delivered" && Model.Status != "Cancelled")
                        {
                            <div class="btn-group">
                                @if (Model.Status != "Processing")
                                {
                                    <button type="button" class="btn btn-sm btn-info status-update" 
                                            data-status="Processing">
                                        <i class="fas fa-spinner me-1"></i> Mark Processing
                                    </button>
                                }
                                @if (Model.Status != "Delivered")
                                {
                                    <button type="button" class="btn btn-sm btn-success status-update" 
                                            data-status="Delivered">
                                        <i class="fas fa-check me-1"></i> Mark Delivered
                                    </button>
                                }
                                @if (Model.Status != "Cancelled")
                                {
                                    <button type="button" class="btn btn-sm btn-danger status-update" 
                                            data-status="Cancelled">
                                        <i class="fas fa-times me-1"></i> Cancel
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Supplier Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">Supplier Information</h6>
                </div>
                <div class="card-body">
                    @if (Model.Supplier != null)
                    {
                        <h6 class="mb-2">@Model.Supplier.Name</h6>
                        @if (!string.IsNullOrEmpty(Model.Supplier.ContactPerson))
                        {
                            <p class="mb-2">
                                <i class="fas fa-user me-2 text-muted"></i>
                                @Model.Supplier.ContactPerson
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Supplier.Phone))
                        {
                            <p class="mb-2">
                                <i class="fas fa-phone me-2 text-muted"></i>
                                <a href="tel:@Model.Supplier.Phone" class="text-decoration-none">
                                    @Model.Supplier.Phone
                                </a>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Supplier.Email))
                        {
                            <p class="mb-2">
                                <i class="fas fa-envelope me-2 text-muted"></i>
                                <a href="mailto:@Model.Supplier.Email" class="text-decoration-none">
                                    @Model.Supplier.Email
                                </a>
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Supplier.Address))
                        {
                            <p class="mb-0">
                                <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                @Model.Supplier.Address
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">Supplier information not available</p>
                    }
                </div>
            </div>
            
            <!-- Order Information -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">Order Information</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Order Number</small>
                        <p class="mb-0 fw-bold">@Model.OrderNumber</p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Order Date</small>
                        <p class="mb-0">
                            @Model.OrderDate.ToString("MMMM dd, yyyy")
                            <br>
                            <small class="text-muted">@Model.OrderDate.ToString("hh:mm tt")</small>
                        </p>
                    </div>
                    @if (Model.ExpectedDeliveryDate.HasValue)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block">Expected Delivery</small>
                            <p class="mb-0">
                                @Model.ExpectedDeliveryDate.Value.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    }
                    <div class="mb-3">
                        <small class="text-muted d-block">Created</small>
                        <p class="mb-0">
                            @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            <br>
                            <small class="text-muted">@Model.CreatedAt.ToString("hh:mm tt")</small>
                        </p>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block">Last Updated</small>
                            <p class="mb-0">
                                @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")
                                <br>
                                <small class="text-muted">@Model.UpdatedAt.Value.ToString("hh:mm tt")</small>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Right Column - Order Items & Notes -->
        <div class="col-lg-8">
            <!-- Order Items -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">Order Items (@Model.Items?.Count() items)</h6>
                </div>
                <div class="card-body">
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@item.Product?.Name</strong>
                                                    @if (item.Product != null)
                                                    {
                                                        <br>
                                                        <small class="text-muted">SKU: @item.Product.SKU</small>
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@item.Quantity</span>
                                            </td>
                                            <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end fw-bold">@item.TotalPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Total Amount:</strong></td>
                                        <td class="text-end fw-bold text-success">@Model.TotalAmount.ToString("C")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box-open fa-2x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No items found in this order</p>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">Notes</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Purchase Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete purchase order <strong>@Model.OrderNumber</strong>?</p>
                @if (Model.Status == "Delivered")
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> Cannot delete delivered purchase orders.
                    </div>
                }
                else
                {
                    <p class="text-danger"><strong>This action cannot be undone.</strong></p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        This order has <strong>@(Model.Items?.Count() ?? 0) items</strong>.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                @if (Model.Status != "Delivered")
                {
                    <form asp-action="DeletePurchaseOrder" asp-area="Admin" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i> Delete Order
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Status update buttons
            document.querySelectorAll('.status-update').forEach(button => {
                button.addEventListener('click', function() {
                    const status = this.dataset.status;
                    const statusName = status.charAt(0).toUpperCase() + status.slice(1);
                    
                    if (confirm(`Are you sure you want to mark this order as ${statusName}?`)) {
                        fetch('@Url.Action("UpdatePurchaseOrderStatus", "Order", new { area = "Admin", id = Model.Id })', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: JSON.stringify({ id: @Model.Id, status: status })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert(data.message);
                                setTimeout(() => location.reload(), 1000);
                            } else {
                                alert(data.message);
                            }
                        })
                        .catch(error => {
                            alert('Error updating status');
                        });
                    }
                });
            });
        });
    </script>
}