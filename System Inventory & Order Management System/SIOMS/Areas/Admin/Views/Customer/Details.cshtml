@model SIOMS.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
    ViewData["Subtitle"] = "View customer information";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a href="@Url.Action("Index", "Customer", new { area = "Admin" })" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to Customers
    </a>
    <div class="btn-group ms-2">
        <a href="@Url.Action("Edit", "Customer", new { area = "Admin", id = Model.Id })" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i> Edit
        </a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="fas fa-trash me-2"></i> Delete
        </button>
    </div>
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Left Column - Customer Info -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="avatar-circle-lg bg-info text-white mb-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                    <h4 class="card-title mb-1">@Model.Name</h4>
                    <p class="text-muted mb-3">
                        <span class="badge @(Model.CustomerType == "VIP" ? "bg-warning" : Model.CustomerType == "Wholesale" ? "bg-primary" : "bg-secondary")">
                            @Model.CustomerType Customer
                        </span>
                    </p>
                    
                    <div class="customer-status mb-4">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success p-2">
                                <i class="fas fa-check-circle me-1"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger p-2">
                                <i class="fas fa-times-circle me-1"></i> Inactive
                            </span>
                        }
                    </div>
                    
                    <div class="customer-stats">
                        <div class="row text-center">
                            <div class="col-6">
                                <h5 class="mb-0">@(Model.SalesOrders?.Count ?? 0)</h5>
                                <small class="text-muted">Total Orders</small>
                            </div>
                            <div class="col-6">
                                @{
                                    var totalSpent = Model.SalesOrders?.Where(so => so.Status == "Completed")
                                        .Sum(so => so.GrandTotal) ?? 0;
                                }
                                <h5 class="mb-0">@totalSpent.ToString("C")</h5>
                                <small class="text-muted">Total Spent</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-address-card me-2"></i> Contact Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="contact-info">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block">Phone</small>
                                <p class="mb-0">
                                    <i class="fas fa-phone me-2 text-primary"></i>
                                    <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                </p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block">Email</small>
                                <p class="mb-0">
                                    <i class="fas fa-envelope me-2 text-primary"></i>
                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                </p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <div>
                                <small class="text-muted d-block">Address</small>
                                <p class="mb-0">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                    @Model.Address
                                </p>
                                @if (!string.IsNullOrEmpty(Model.City))
                                {
                                    <p class="mb-0 ms-4">
                                        @Model.City
                                        @if (!string.IsNullOrEmpty(Model.PostalCode))
                                        {
                                            <span>- @Model.PostalCode</span>
                                        }
                                    </p>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Column - Orders and Activity -->
        <div class="col-lg-8">
            <!-- Recent Orders -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-shopping-cart me-2"></i> Recent Orders
                    </h6>
                    <a href="@Url.Action("Create", "SalesOrder", new { area = "Admin", customerId = Model.Id })" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i> New Order
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.SalesOrders != null && Model.SalesOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.SalesOrders.OrderByDescending(o => o.OrderDate).Take(5))
                                    {
                                        <tr>
                                            <td>#@order.Id</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (order.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">@order.Status</span>
                                                }
                                                else if (order.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">@order.Status</span>
                                                }
                                                else if (order.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@order.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@order.Status</span>
                                                }
                                            </td>
                                            <td>@order.GrandTotal.ToString("C")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "SalesOrder", new { area = "Admin", id = order.Id })" 
                                                   class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        @if (Model.SalesOrders.Count > 5)
                        {
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Index", "SalesOrder", new { area = "Admin", customerId = Model.Id })" 
                                   class="btn btn-sm btn-outline-primary">
                                    View All Orders (@Model.SalesOrders.Count)
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart fa-2x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No orders found</p>
                            <a href="@Url.Action("Create", "SalesOrder", new { area = "Admin", customerId = Model.Id })" 
                               class="btn btn-sm btn-primary mt-2">
                                <i class="fas fa-plus me-1"></i> Create First Order
                            </a>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Customer Notes -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-sticky-note me-2"></i> Customer Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Customer ID</small>
                            <p class="mb-0">@Model.Id</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Created Date</small>
                            <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Customer Since</small>
                            <p class="mb-0">@Model.CreatedAt.ToString("MMM yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Last Order</small>
                            @if (Model.SalesOrders != null && Model.SalesOrders.Any())
                            {
                                var lastOrder = Model.SalesOrders.OrderByDescending(o => o.OrderDate).FirstOrDefault();
                                <p class="mb-0">@lastOrder?.OrderDate.ToString("MMM dd, yyyy")</p>
                            }
                            else
                            {
                                <p class="mb-0 text-muted">No orders yet</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete customer <strong>@Model.Name</strong>?</p>
                <p class="text-danger"><strong>Warning:</strong> This action cannot be undone and will delete all associated orders.</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This customer has <strong>@(Model.SalesOrders?.Count ?? 0) orders</strong>.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-area="Admin" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i> Delete Customer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>