@model IEnumerable<SIOMS.Models.Customer>
@{
    ViewData["Title"] = "Customers";
    ViewData["Subtitle"] = "Manage your customers";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a href="@Url.Action("Create", "Customer", new { area = "Admin" })" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Add Customer
    </a>
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <h2>Customer Management</h2>
                <p class="text-muted">Manage your customer database</p>
            </div>
        </div>
    </div>

    <!-- Filters and Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <form method="get" action="@Url.Action("Index", "Customer", new { area = "Admin" })" class="row g-3">
                                <div class="col-auto">
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Search customers..." value="@ViewBag.SearchTerm">
                                </div>
                                <div class="col-auto">
                                    <select name="customerType" class="form-select">
                                        <option value="">All Types</option>
                                        <option value="Regular" selected="@(ViewBag.CustomerType == "Regular")">Regular</option>
                                        <option value="VIP" selected="@(ViewBag.CustomerType == "VIP")">VIP</option>
                                        <option value="Wholesale" selected="@(ViewBag.CustomerType == "Wholesale")">Wholesale</option>
                                    </select>
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || !string.IsNullOrEmpty(ViewBag.CustomerType))
                                    {
                                        <a href="@Url.Action("Index", "Customer", new { area = "Admin" })" class="btn btn-secondary ms-2">
                                            <i class="fas fa-redo"></i> Reset
                                        </a>
                                    }
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <a href="@Url.Action("Create", "Customer", new { area = "Admin" })" class="btn btn-success">
                                <i class="fas fa-plus"></i> Add New Customer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Customer</th>
                                    <th>Contact</th>
                                    <th>Type</th>
                                    <th>Total Orders</th>
                                    <th>Total Spent</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var customer in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle bg-info text-white me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@customer.Name</strong>
                                                        @if (!string.IsNullOrEmpty(customer.Email))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@customer.Email</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(customer.Phone))
                                                {
                                                    <a href="tel:@customer.Phone" class="text-decoration-none">
                                                        @customer.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (customer.CustomerType == "VIP")
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-crown me-1"></i> @customer.CustomerType
                                                    </span>
                                                }
                                                else if (customer.CustomerType == "Wholesale")
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-building me-1"></i> @customer.CustomerType
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-user me-1"></i> @customer.CustomerType
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@(customer.SalesOrders?.Count ?? 0)</span>
                                            </td>
                                            <td>
                                                @{
                                                    var totalSpent = customer.SalesOrders?.Where(so => so.Status == "Completed")
                                                        .Sum(so => so.GrandTotal) ?? 0;
                                                }
                                                <strong>@totalSpent.ToString("C")</strong>
                                            </td>
                                            <td>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input status-toggle" type="checkbox" 
                                                           data-id="@customer.Id" @(customer.IsActive ? "checked" : "") 
                                                           data-bs-toggle="tooltip" title="Toggle Status">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", "Customer", new { area = "Admin", id = customer.Id })" 
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "Customer", new { area = "Admin", id = customer.Id })" 
                                                       class="btn btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", "Customer", new { area = "Admin", id = customer.Id })" 
                                                       class="btn btn-outline-danger btn-delete-confirm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                            <h5 class="text-muted">No customers found</h5>
                                            <p class="text-muted mb-4">Get started by adding your first customer.</p>
                                            <a href="@Url.Action("Create", "Customer", new { area = "Admin" })" class="btn btn-primary">
                                                <i class="fas fa-plus me-2"></i> Add First Customer
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Status toggle for customers
            document.querySelectorAll('.status-toggle').forEach(toggle => {
                toggle.addEventListener('change', function() {
                    const customerId = this.dataset.id;
                    const isActive = this.checked;
                    
                    if (confirm('Are you sure you want to change customer status?')) {
                        fetch('@Url.Action("ToggleStatus", "Customer", new { area = "Admin" })/' + customerId, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: JSON.stringify({ id: customerId })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert(data.message);
                            } else {
                                this.checked = !isActive;
                                alert(data.message);
                            }
                        })
                        .catch(error => {
                            this.checked = !isActive;
                            alert('Error updating status');
                        });
                    } else {
                        this.checked = !isActive;
                    }
                });
            });

            // Delete confirmation
            document.querySelectorAll('.btn-delete-confirm').forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this customer? This action cannot be undone.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}