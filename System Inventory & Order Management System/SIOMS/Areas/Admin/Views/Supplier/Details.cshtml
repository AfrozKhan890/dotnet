@model SIOMS.Models.Supplier
@{
    ViewData["Title"] = "Supplier Details";
    ViewData["Subtitle"] = "View supplier information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section HeaderButtons {
    <a href="/Admin/Supplier/Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to List
    </a>
    <a href="/Admin/Supplier/Edit/@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i> Edit
    </a>
}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i> Supplier Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-3 text-center mb-3 mb-md-0">
                        <div class="display-1 text-info">
                            <i class="fas fa-truck-loading"></i>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h2 class="mb-2">@Model.Name</h2>
                        <p class="text-muted mb-3">Supplier ID: @Model.Id</p>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-2">Contact Person:</h6>
                                <p class="mb-0">@Model.ContactPerson</p>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-2">Status:</h6>
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-2">Email:</h6>
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <p class="mb-0">
                                        <a href="mailto:@Model.Email" class="text-decoration-none">
                                            @Model.Email
                                        </a>
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">Not provided</p>
                                }
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-2">Phone:</h6>
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <p class="mb-0">
                                        <a href="tel:@Model.Phone" class="text-decoration-none">
                                            @Model.Phone
                                        </a>
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">Not provided</p>
                                }
                            </div>
                            
                            <div class="col-md-12 mb-3">
                                <h6 class="text-muted mb-2">Address:</h6>
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    <p class="mb-0">@Model.Address</p>
                                    @if (!string.IsNullOrEmpty(Model.City))
                                    {
                                        <p class="mb-0">@Model.City @Model.PostalCode</p>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">Not provided</p>
                                }
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-2">Created Date:</h6>
                                <p class="mb-0">
                                    <i class="fas fa-calendar-plus me-2"></i>
                                    @Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <!-- Products & Orders Summary -->
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-box me-2"></i> Products
                                    <span class="badge bg-primary ms-2">@(Model.Products?.Count ?? 0)</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                @if (Model.Products?.Any() == true)
                                {
                                    <div class="list-group list-group-flush">
                                        @foreach (var product in Model.Products.Take(5))
                                        {
                                            <a href="/Admin/Product/Details/@product.Id" 
                                               class="list-group-item list-group-item-action">
                                                <div class="d-flex justify-content-between">
                                                    <span>@product.Name</span>
                                                    <span class="badge bg-info">@product.SKU</span>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                    @if (Model.Products.Count > 5)
                                    {
                                        <div class="text-center mt-3">
                                            <a href="/Admin/Product/Index?supplierId=@Model.Id" 
                                               class="btn btn-sm btn-outline-primary">
                                                View All @Model.Products.Count Products
                                            </a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">No products from this supplier</p>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-shopping-cart me-2"></i> Purchase Orders
                                    <span class="badge bg-primary ms-2">@(Model.PurchaseOrders?.Count ?? 0)</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                @if (Model.PurchaseOrders?.Any() == true)
                                {
                                    <p class="text-muted mb-0">View purchase orders for this supplier</p>
                                    <div class="text-center mt-3">
                                        <a href="/Admin/Order/PurchaseOrders?supplierId=@Model.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            View Orders
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">No purchase orders from this supplier</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>