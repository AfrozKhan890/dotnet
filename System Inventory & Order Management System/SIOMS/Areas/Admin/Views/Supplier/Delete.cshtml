@model SIOMS.Models.Supplier
@{
    ViewData["Title"] = "Delete Supplier";
    ViewData["Subtitle"] = "Remove supplier from system";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to List
    </a>
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card animate-slide-up">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0"><i class="fas fa-exclamation-triangle me-2"></i> Delete Supplier</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Warning!</h5>
                    <p>You are about to delete the supplier <strong>"@Model.Name"</strong>. This action cannot be undone.</p>
                </div>
                
                <div class="supplier-info mb-4">
                    <h6 class="text-muted mb-3">Supplier Details</h6>
                    <div class="row">
                        <div class="col-12 mb-3">
                            <strong>Name:</strong>
                            <p class="mb-0">@Model.Name</p>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.ContactPerson))
                        {
                            <div class="col-12 mb-3">
                                <strong>Contact Person:</strong>
                                <p class="mb-0">@Model.ContactPerson</p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="col-12 mb-3">
                                <strong>Email:</strong>
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="col-12 mb-3">
                                <strong>Phone:</strong>
                                <p class="mb-0">@Model.Phone</p>
                            </div>
                        }
                        
                        <div class="col-12 mb-3">
                            <strong>Total Products:</strong>
                            <p class="mb-0">
                                <span class="badge @((Model.Products?.Count ?? 0) > 0 ? "bg-danger" : "bg-success")">
                                    @(Model.Products?.Count ?? 0) products
                                </span>
                            </p>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <strong>Total Orders:</strong>
                            <p class="mb-0">
                                <span class="badge @((Model.PurchaseOrders?.Count ?? 0) > 0 ? "bg-danger" : "bg-success")">
                                    @(Model.PurchaseOrders?.Count ?? 0) orders
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                
                @if (Model.Products?.Any() == true || Model.PurchaseOrders?.Any() == true)
                {
                    <div class="alert alert-warning">
                        <h6 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i> Important Notice</h6>
                        <p class="mb-0">
                            This supplier has @((Model.Products?.Count ?? 0) + (Model.PurchaseOrders?.Count ?? 0)) related records. 
                            You must remove or reassign all products and orders before deleting.
                        </p>
                    </div>
                }
                
                <form asp-action="Delete" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger" 
                                @if (Model.Products?.Any() == true || Model.PurchaseOrders?.Any() == true) { <text>disabled</text> }>
                            <i class="fas fa-trash me-2"></i> Delete Supplier
                        </button>
                    </div>
                </form>
                
                @if (Model.Products?.Any() == true || Model.PurchaseOrders?.Any() == true)
                {
                    <div class="alert alert-info mt-3">
                        <small><i class="fas fa-info-circle me-2"></i> Delete button is disabled. Remove all related records first.</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>