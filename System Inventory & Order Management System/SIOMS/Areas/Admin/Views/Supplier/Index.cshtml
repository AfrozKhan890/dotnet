@model IEnumerable<SIOMS.Models.Supplier>
@{
    ViewData["Title"] = "Suppliers";
    ViewData["Subtitle"] = "Manage your suppliers";
    Layout = "_Layout";
}

@section HeaderButtons {
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Add Supplier
    </a>
}

<div class="card animate-slide-up">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Supplier List</h5>
            <form method="get" class="d-flex gap-2">
                <input type="text" name="search" class="form-control form-control-sm" 
                       placeholder="Search suppliers..." value="@ViewBag.SearchTerm">
                <button type="submit" class="btn btn-sm btn-primary">
                    <i class="fas fa-search"></i>
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="fas fa-times"></i>
                    </a>
                }
            </form>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Supplier</th>
                        <th>Contact</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Products</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr class="animate-fade-in" style="animation-delay: @(Model.ToList().IndexOf(supplier) * 0.1)s">
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle bg-primary text-white me-3">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@supplier.Name</strong>
                                        @if (!string.IsNullOrEmpty(supplier.City))
                                        {
                                            <br>
                                            <small class="text-muted">@supplier.City</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>@supplier.ContactPerson</td>
                            <td>
                                @if (!string.IsNullOrEmpty(supplier.Email))
                                {
                                    <a href="mailto:@supplier.Email" class="text-decoration-none">
                                        @supplier.Email
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(supplier.Phone))
                                {
                                    <a href="tel:@supplier.Phone" class="text-decoration-none">
                                        @supplier.Phone
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary">@(supplier.Products?.Count ?? 0)</span>
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input status-toggle" type="checkbox" 
                                           data-id="@supplier.Id" @(supplier.IsActive ? "checked" : "") 
                                           data-bs-toggle="tooltip" title="Toggle Status">
                                </div>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@supplier.Id" 
                                       class="btn btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@supplier.Id" 
                                       class="btn btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@supplier.Id" 
                                       class="btn btn-outline-danger btn-delete-confirm" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-truck-loading fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No suppliers found</h5>
                <p class="text-muted mb-4">Get started by adding your first supplier.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> Add First Supplier
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Status toggle
            document.querySelectorAll('.status-toggle').forEach(toggle => {
                toggle.addEventListener('change', function() {
                    const supplierId = this.dataset.id;
                    const isActive = this.checked;
                    
                    fetch(`/Admin/Supplier/ToggleStatus/${supplierId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ id: supplierId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            adminDashboard.showNotification(data.message, 'success');
                        } else {
                            this.checked = !isActive;
                            adminDashboard.showNotification(data.message, 'danger');
                        }
                    })
                    .catch(error => {
                        this.checked = !isActive;
                        adminDashboard.showNotification('Error updating status', 'danger');
                    });
                });
            });
            
            // Delete confirmation
            document.querySelectorAll('.btn-delete-confirm').forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to delete this supplier?')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}