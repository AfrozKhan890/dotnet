@model IEnumerable<SymphonyLimited.Models.FAQ>
@{
    ViewData["Title"] = "FAQs";
    Layout = "_Layout"; // or your site layout
}
<link rel="stylesheet" href="~/css/faq.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<section class="faq-container">
    <h1>Frequently Asked Questions</h1>
    <p class="faq-intro">Find answers to common questions about our institution.</p>

    @foreach (var faq in Model)
    {
        <div class="faq-item">
            <div class="faq-question">
                <h3><i class="fas fa-question-circle"></i> @faq.Question</h3>
            </div>
            <div class="answer-content">
                <p><i class="fas fa-info-circle"></i> @faq.Answer</p>
            </div>
        </div>
    }
</section>

@section Scripts {
    <script src="~/js/faq.js"></script>
}
