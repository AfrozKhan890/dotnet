@model SymphonyLimited.Models.Course
@{
    ViewData["Title"] = Model.CourseName;
}

<link rel="stylesheet" href="~/css/courses.css" />

<div class="course-detail-container">
    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.CourseName" class="detail-image" />
    <h1 class="course-title">@Model.CourseName</h1>
    <div class="course-meta">
        <p><strong>Duration:</strong> @Model.Duration</p>
        @if (Model.IsNew) { <span class="badge bg-warning">New</span> }
    </div>
    
    <div class="detail-section">
        <h3>Course Description</h3>
        <p>@Model.Description</p>
    </div>
    
    <div class="detail-section">
        <h3>Topics Covered</h3>
        <ul class="topic-list">
            @foreach (var topic in Model.TopicsCovered.Split(','))
            {
                <li>@topic.Trim()</li>
            }
        </ul>
    </div>
    
    <a asp-action="Index" class="back-link">‚Üê Back to All Courses</a>
</div>