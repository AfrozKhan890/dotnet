@model SymphonyLimited.Models.EntranceExamResult
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "Add Result" : "Edit Result";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input asp-for="StudentName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RollNumber"></label>
        <input asp-for="RollNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Marks"></label>
        <input asp-for="Marks" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ClassAllotted"></label>
        <input asp-for="ClassAllotted" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FeeAmount"></label>
        <input asp-for="FeeAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PaymentDueDate"></label>
        <input asp-for="PaymentDueDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
